generator client {
  provider = "prisma-client"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Pessoa {
    id             String       @id @default(uuid(7))
    nome           String
    cpf            String?
    dataNascimento DateTime?
    telefone       String?
    email          String?
    idade          Int?
    createdAt      DateTime     @default(now())
    updatedAt      DateTime     @updatedAt

    cliente Cliente?
    consultor Consultor?
    endereco Endereco?

    @@unique([cpf])
}

model Consultor {
    id String @id @default(uuid(7))

    pessoa   Pessoa @relation(fields: [pessoaId], references: [id])
    pessoaId String  @unique

    clientes Cliente[]
}


enum TipoClinete {
    CONSULTOR
}

model Cliente {
    id String @id @default(uuid(7))
    tipoCliente TipoClinete

    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    pessoa   Pessoa @relation(fields: [pessoaId], references: [id])
    pessoaId String  @unique

    consultor Consultor? @relation(fields: [consultorId], references: [id])
    consultorId String? @unique

    @@index([pessoaId])
}

model Endereco {
  id String @id @default(uuid(7))
  cep String
  estado String
  cidade String?
  bairro String?
  rua String?
  numero String?
  complemento String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  pessoa Pessoa? @relation(fields: [pessoaId], references: [id])
  pessoaId String? @unique

  @@index([pessoaId])
}
