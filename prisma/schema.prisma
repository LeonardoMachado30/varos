generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Pessoa {
  id          String      @id @default(uuid(7))
  nome        String
  cpf         String?     @unique
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
  email       String?
  telefone    String?
  idade       Int?
  tipoUsuario TipoUsuario @default(CONSULTOR)
  cliente     Cliente?
  consultor   Consultor?
  endereco    Endereco?
}

model Consultor {
  id       String    @id @default(uuid(7))
  pessoaId String    @unique
  clientes Cliente[]
  pessoa   Pessoa    @relation(fields: [pessoaId], references: [id])
}

model Cliente {
  id String @id @default(uuid(7))

  consultor   Consultor? @relation(fields: [consultorId], references: [id])
  consultorId String?    @unique

  pessoa   Pessoa @relation(fields: [pessoaId], references: [id])
  pessoaId String @unique

  @@index([pessoaId])
}

model Endereco {
  id          String   @id @default(uuid(7))
  cep         String
  estado      String
  cidade      String?
  bairro      String?
  rua         String?
  numero      String?
  complemento String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  pessoaId    String?  @unique
  pessoa      Pessoa?  @relation(fields: [pessoaId], references: [id])

  @@index([pessoaId])
}

enum TipoUsuario {
  CONSULTOR
  CLIENTE
}
